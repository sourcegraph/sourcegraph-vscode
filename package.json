{
  "name": "sourcegraph",
  "displayName": "Sourcegraph",
  "description": "Sourcegraph for VS Code",
  "version": "1.0.16",
  "publisher": "sourcegraph",
  "license": "MIT",
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph-vscode.git"
  },
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.open",
    "onCommand:extension.search"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.open",
        "title": "Sourcegraph: Open"
      },
      {
        "command": "extension.search",
        "title": "Sourcegraph: Search"
      }
    ],
    "keybindings": [
      {
        "command": "extension.open",
        "key": "alt+a",
        "mac": "alt+a",
        "when": "editorFocus"
      },
      {
        "command": "extension.search",
        "key": "alt+s",
        "mac": "alt+s",
        "when": "editorFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sourcegraph extension configuration",
      "properties": {
        "sourcegraph.url": {
          "type": [
            "string"
          ],
          "default": "https://sourcegraph.com",
          "description": "The base URL of the Sourcegraph instance to use."
        },
        "sourcegraph.remoteUrlReplacements": {
          "type": [
            "object"
          ],
          "default": {},
          "description": "For each item in this object, replace key with value in the remote url."
        }
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "verifyConditions": [
      "semantic-release-vsce",
      "@semantic-release/github"
    ],
    "prepare": {
      "path": "semantic-release-vsce",
      "packageVsix": "sourcegraph-vscode.vsix"
    },
    "publish": [
      "semantic-release-vsce",
      {
        "path": "@semantic-release/github",
        "assets": "sourcegraph-vscode.vsix"
      }
    ]
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "prettier": "prettier \"**/*.{ts,js,json,md,yml}\" --list-different --write",
    "prettier-check": "npm run prettier -- --write=false",
    "eslint": "eslint 'src/**/*.ts'",
    "build": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@sourcegraph/eslint-config": "^0.4.8",
    "@sourcegraph/prettierrc": "^3.0.1",
    "@sourcegraph/tsconfig": "^4.0.0",
    "@types/execa": "2.0.0",
    "@types/node": "12.12.14",
    "@types/vscode": "1.41.0",
    "eslint": "^6.7.2",
    "husky": "^3.0.3",
    "prettier": "^1.19.1",
    "semantic-release": "^15.13.19",
    "semantic-release-vsce": "^2.2.8",
    "typescript": "^3.5.3",
    "vsce": "^1.42.0"
  },
  "dependencies": {
    "execa": "^2.0.3",
    "open": "^6.4.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
}
